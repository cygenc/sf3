{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                {% if error %}
                    <div class="alert-message alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="form-group">
                        <label for="inputUsername" class="control-label required">Identifiant ou Email</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="control-label required">Mot de passe</label>
                        <input type="password" id="inputPassword" name="password" class="form-control" required>
                    </div>

                    <input type="checkbox" id="inputRememberMe" name="_remember_me" >
                    <label for="inputRememberMe">Maintenir la connexion</label>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Connexion</button>
                    </div>

                    <hr>
                    <p class="text-center">Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></p>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
